{
  "name": "space-sweeper",
  "version": "0.1.0",
  "private": true,
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "airbnb-typescript/base"
    ],
    "rules": {
      "no-plusplus": 0,
      "linebreak-style": 0,
      "object-curly-newline": 0,
      "array-bracket-spacing": 0,
      "implicit-arrow-linebreak": 0,
      "no-new": 0,
      "consistent-return": 0,
      "no-console": 0,
      "func-names": 0,
      "no-underscore-dangle": 0,
      "max-len": 0,
      "space-before-function-paren": 0,
      "arrow-body-style": 0,
      "no-await-in-loop": 0,
      "@typescript-eslint/space-before-function-paren": 0,
      "lines-between-class-members": 0,
      "no-restricted-syntax": 0,
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ]
    },
    "env": {
      "node": true,
      "es2020": true
    }
  },
  "devDependencies": {
    "@types/eslint": "^6.8.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-plugin-import": "^2.20.2",
    "node-sass": "^4.14.0",
    "typescript": "^3.8.3"
  }
}
